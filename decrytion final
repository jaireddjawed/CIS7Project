
#include <iostream>
#include <string>
#include <string.h>

using namespace std; 

int main()
{
  string input;
  char decryptedMsg[0];
  char key[] = "bacon"; 
  int i, length = 1;
 
  cout << "enter the message you want to decrypt:";
  cin >> input;
   
  for(i = 0; i < length; ++i)
        decryptedMsg[i] = (((input[i] - key[i]) + 26) % 26) + 'A';
 
    decryptedMsg[i] = '\0';
    return 0;
}

